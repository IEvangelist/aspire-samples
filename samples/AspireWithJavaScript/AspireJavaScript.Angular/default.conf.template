server {
    listen       80;
    listen  [::]:80;
    server_name  localhost;

    location / {
        root /usr/share/nginx/html;
        try_files $uri $uri/ /index.html;
    }

    location /api/ {
        proxy_pass ${services__weatherapi__1};
        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        rewrite ^/api(/.*)$ $1 break;
    }
}